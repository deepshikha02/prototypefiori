<Dialog xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:layout="sap.ui.layout" title="Add Participant">
	<layout:VerticalLayout width="100%">
		<layout:content>
			<Label text="Participant Name"></Label>
			<Input type="Text" id="memberName" placeholder="Enter Participant Name"></Input>
			<Label text="Participant email ID"></Label>
			<Input type="Email" id="memberEmailId" placeholder="Enter Participant email ID"></Input>
		</layout:content>
	</layout:VerticalLayout>
	<beginButton>
		<Button text="Add" press="onPressSendInvitation"></Button>
	</beginButton>
	<endButton>
		<Button text="Cancel" press="onPressHandleClose"></Button>
	</endButton>
</Dialog>
