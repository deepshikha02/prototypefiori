<Dialog xmlns:core="sap.ui.core" xmlns="sap.m" title="Members">
	<List items="{/replyEntries}">
		<items>
			<StandardListItem title="{Text}">
			</StandardListItem>
		</items>
	</List>
	<beginButton>
		<Button text="Add Reply" press="onPressAddReply"></Button>
	</beginButton>
	<endButton>
		<Button text="Cancel" press="onPressHandleClose"></Button>
	</endButton>
</Dialog>