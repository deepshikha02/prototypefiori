<Dialog xmlns:core="sap.ui.core" xmlns="sap.m" title="All Groups">
	<List items="{/groups}" mode="SingleSelectLeft" 
				selectionChange="onSelectOpenGroupActionsDialog">
		<items>
			<StandardListItem title="{Name}" description="{Description}">
			</StandardListItem>
		</items>
	</List>
	<endButton>
		<Button text="Cancel" press="onPressHandleClose"></Button>
	</endButton>
</Dialog>